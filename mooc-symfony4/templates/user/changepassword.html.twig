{# templates/user/changepassword.html.twig #}

{% extends "user/profil.html.twig" %}

{% block edit1 %}
{% endblock %}

{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="{{ path('profile')}}">Retour</a></li>
{% endblock %}

{% block update %}
    <div class="col-sm-9">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">
                        <h5>Nouveau mot de passe</h5>
                    </div>
                </div>     
            </div> 
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="container">
                        <div class="form-group">
                            {{ form_row(form.currentPassword, {attr: {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.newPassword.first, {attr: {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.newPassword.second, {attr: {'class': 'form-control'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save" aria-hidden="true"></i> {{ 'Sauvegarder'|trans }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}