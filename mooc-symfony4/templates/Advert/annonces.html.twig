{# templates/Advert/annonces.html.twig #}

{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Annonces{% endblock %}

{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="{{ path('oc_advert_index')}}">Home</a></li>
  <li class="breadcrumb-item active" aria-current="page">{{categorie.catName}}</li>
{% endblock %}

{% block body %}
  <div class="my-3 p-3 bg-blue rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Annonces : </h6>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      <a href="{{ path('form', { 'id' : categorie.categorieId})}}">Ajouter une annonce</a>
    {% endif %}
    {% for post_n in post %}
      <div class="media text-muted pt-3">
        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark"><a href="{{ path('oc_advert_post', { 'id' : post_n.postId })}}">{{post_n.titre}}</a></strong>
        </p>
      </div>
    {% endfor %}
  </div>
{% endblock %}

